<view class="page">
  <view class="page__hd">
    <view class="page__title">{{lost.title}}</view>
    <view class="page__desc">发布者：{{lost.user.nickName}}</view>
  </view>
  <view class="page__bd">
    <view class="weui-article">

      <view class="weui-article__p">
        情况：{{lost.displayableType}}
      </view>

      <view class="weui-article__p">
        地点：{{lost.place}}
      </view>

      <view class="weui-article__p">
        时间：{{lost.displayableTime}}
      </view>

      <view class="weui-article__p">
        补充信息：{{lost.supplementary}}
      </view>

      <view class="weui-article__p">
        信息发布时间：{{lost.displayableLastUpdated}}
      </view>

      <view class="weui-article__p">
        发布者联系电话：{{lost.user.tel}}
      </view>

      <view class="weui-article__p">
        若有线索，请与发布者联系。
      </view>
    </view>
  </view>
</view>