<view class="page">
  <view class="page__hd">
    <view class="page__title">{{info.title}}</view>
    <view class="page__desc">作者：{{info.author}}</view>
  </view>
  <view class="page__bd">
    <view class="weui-article">

      <view class="weui-article__p">
        更新时间：{{info.displayableUpdateTime}}
      </view>

      <view class="weui-article__p">
        {{info.text}}
      </view>

    </view>
  </view>
</view>